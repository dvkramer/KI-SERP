{
  "manifest_version": 3,
  "name": "Kramer Intelligence",
  "version": "1.0",
  "host_permissions": [
    "*://www.google.com/*",
    "*://www.bing.com/*",
    "*://duckduckgo.com/*",
    "*://search.yahoo.com/*",
    "*://search.brave.com/*",
    "*://yandex.com/*",
    "*://www.ecosia.org/*",
    "https://ki-vercel-for-serp.vercel.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.google.com/search*",
        "*://www.bing.com/search*",
        "*://duckduckgo.com/*",
        "*://search.yahoo.com/search*",
        "*://search.brave.com/search*",
        "*://yandex.com/search*",
        "*://www.ecosia.org/search*"
      ],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
}