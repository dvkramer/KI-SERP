{
  "manifest_version": 3,
  "name": "Kramer Intelligence",
  "version": "1.0",
  "permissions": ["storage"],
  "host_permissions": [
    "*://www.google.com/search*",
    "*://www.bing.com/search*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.google.com/search*", "*://www.bing.com/search*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "action": {
    "default_popup": "options.html"
  }
}